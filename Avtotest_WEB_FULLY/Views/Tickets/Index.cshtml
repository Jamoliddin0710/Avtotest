@model List<Ticket>
<body class="menu-body">
<h1 style="text-align: center">Tickets</h1>
@{
    for (int i = 0; i < @Model.Count; i++)
    {
        var ticketname = $"Ticket {i+1} {Model[i].CorrectAnswerCount}/{Model[i].QuestionCount}";
            <div class="button" >
                <a asp-controller="Examinations" asp-action="Exam" asp-route-ticketid="@Model[i].id">   <button style="width: 200px; height: 50px" type="button" class="btn btn-primary"> @ticketname  </button> </a>
            </div>
            <br />

    }
    
}
</body>
<style>
    .menu-body {
        background: linear-gradient(to right, purple, cornflowerblue )
    }
     .button {
         text-align: center;
     }
</style>